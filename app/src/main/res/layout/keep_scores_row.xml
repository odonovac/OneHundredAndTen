<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgBidder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/chip2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgDealer"
        android:src="@drawable/dealer_selected"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgBidder"
        android:layout_toEndOf="@+id/imgBidder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/playerTotalScore"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/playerName"
        android:layout_toLeftOf="@+id/playerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/playerName"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/addTrick"
        android:layout_toLeftOf="@+id/addTrick"
        android:autoText="false" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/addTrick"
        android:text="+"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/playerScore"
        android:layout_toStartOf="@+id/playerScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/playerScore"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/minusTrick"
        android:layout_toLeftOf="@+id/minusTrick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/minusTrick"
        android:text="-"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>